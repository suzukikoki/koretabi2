<div class="row pb-5">
  <div class="col-10 mx-auto">
    <h4><strong>投稿一覧(全<%= @post_count %>件)</strong></h4>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>photo</th>
      <th>user</th>
      <th>place</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.image, size:'50x50' %>
        </td>
        <td>
          <%= post.user.name %>
        </td>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <%= post.place %>
          <% end %>
        </td>
        <td>
          <%= post.description %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>

<div class="footer container col-md-6 offset-md-3 py-2">
  <div class="pagination justify-content-center">
    <%= paginate @posts %>
  </div>
</div>
<div class="container pt-5 pb-5">
  <div class="row">
    <div class="md-3">
      <h4>投稿詳細</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @post.image, size:'100x100' %>
  </div>
  <div class="col-md-9">
    <table class="table">
      <tbody>
        <tr>
          <td><label>場所</label></td>
          <td><%= @post.place %></td>
        </tr>
        <tr>
          <td><label>説明</label></td>
          <td><%= @post.description %></td>
        </tr>
        <tr>
          <td><label>地域</label></td>
          <td><%= @post.category.name %></td>
        </tr>
      </tbody>
    </table>
    <div class="mt-3 text-center">
          <div>
            <%= link_to "不適切な投稿の削除", admin_post_path(@post), method: :delete, class: "btn btn-danger", "data-confirm" => "不適切な投稿として削除しますか？" %>
          </div>
    </div>
  </div>
  </div>
</div>



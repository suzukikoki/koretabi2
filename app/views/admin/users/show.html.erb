<div class="container pb-5">
  <div class="row">
    <div class="col3-md offset-1 mt-5 mb-5">
      <h4><strong><%= "user.name" %>さんの会員詳細</strong></h4>
    </div>
  </div>

   <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table shadow-lg">
        <tr>
          <th class="table-active">会員ID</th>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <th class="table-active">氏名</th>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th class="table-active">会員ステータス</th>
          <% if @user.is_deleted == true %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% else %>
            <td class="text-success font-weight-bold">有効</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <p class="text-center">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-outline-success m-3' %>
      <%= link_to "会員一覧", admin_users_path, class: 'btn btn-outline-primary' %>
    </p>
  </div>
</div>
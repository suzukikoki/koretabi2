<div class="container">

  <div class="row mt-5 col lg-3">
    <h4 style="background-color:#EEEEEE;color:dark;display:inline">マイページ</h4>
      <div class="row col lg-3">
        <%= link_to "編集する" , edit_user_path,class: "btn btn-sm btn-success" %>
      </div>
  </div>

  <div class="row mt-2">
    </div>
    <div class="col col-lg-8">
    <table class="table table-bordered border-dark">
      <tr>
        <th>ニックネーム</th>
        <td><%= @user.name %></td>
      </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      </div>
      
      <div class="row">
        
      <div class="col">
        <h4 style="background-color:#EEEEEE;color:dark;display:inline">投稿一覧</h4>
        <table>
          <% @posts.each do |post| %>
        <tr>
          <ul class="list-group">
            <li class="list-group-item">
            <%= link_to post_path(post.id) do %>
            <%= post.place.truncate(12) %>
            <% end %>
            </li>
          </ul>
        </tr>
        <% end %>
        </table>
      </div>
    
      <div class="col">
        <h4 style="background-color:#EEEEEE;color:dark;display:inline">いいね一覧</h4>
        <table>
          <% @favorites.each do |favorite| %>
        <tr>
          <ul class="list-group">
            <li class="list-group-item">
            <%= link_to post_path(favorite.post.id) do %>
            <%= favorite.post.place.truncate(12) %>
            <% end %>
            </li>
          </ul>
        </tr>
        <% end %>
        </table>
        </div>
      </div>
      
    <div class="footer container col-md-6 offset-md-3 py-2">
      <div class="pagination justify-content-center">
        <%= paginate @posts %>
      </div>
    </div>
      


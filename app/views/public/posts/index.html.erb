<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>photo</th>
      <th>user</th>
      <th>place</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.image, size:'100x100' %>
        </td>
        <td>
          <%= post.user.name %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.place %>
          <% end %>
        </td>
        <td>
          <%= post.description %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>